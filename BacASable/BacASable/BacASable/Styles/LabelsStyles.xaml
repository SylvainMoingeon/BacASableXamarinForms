    <Style x:Key="CardIsConnectedLabel" TargetType="Label">
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="BackgroundColor" Value="{StaticResource BlueGreenColor}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}" />
        <Setter Property="WidthRequest" Value="70" />
        <Setter Property="HeightRequest" Value="20" />
    </Style>

    <Style x:Key="CardActionLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource SoftGrayColor}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="FontFamily" Value="{StaticResource LatoSemibold}" />
    </Style>

    <Style x:Key="TitleLabelMediumStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource LatoMedium}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="TextColor" Value="{StaticResource AlmostBlackColor}" />
    </Style>


    <Style x:Key="TitleFormCenteredLabel" TargetType="Label" BaseResourceKey="TitleLabelMediumStyle">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="DefaultFormCenteredLabel"  TargetType="Label" BaseResourceKey="DefaultLabelMediumStyle">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
        <Setter Property="Margin" Value="20,0" />
    </Style>

    <Style x:Key="StayTitleEstayersLabel2" TargetType="Label">
